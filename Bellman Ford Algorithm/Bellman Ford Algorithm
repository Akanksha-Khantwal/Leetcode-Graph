// User function Template for C++

class Solution {
  public:
    vector<int> bellmanFord(int V, vector<vector<int>>& edges, int src) {
        vector<int>dis(V,1e8);
        dis[src]=0;
        int e=edges.size();
        for(int i=0;i<V-1;i++){
            bool flag=0;
            for(int j=0;j<e;j++){
                int u=edges[j][0];
                int v=edges[j][1];
                int w=edges[j][2];
                if(dis[u]==1e8)
                continue;
                
                if(dis[u]+w<dis[v]){
                    flag=1;
                    dis[v]=dis[u]+w;
                }
            }
            if(!flag)
            return dis;
        }
        for(int j=0;j<e;j++){
                int u=edges[j][0];
                int v=edges[j][1];
                int w=edges[j][2];
                if(dis[u]==1e8)
                continue;
                
                if(dis[u]+w<dis[v]){
                    vector<int>ans;
                    ans.push_back(-1);
                    return ans;
                }
            }
            return dis;
       
       
        
    }
};
